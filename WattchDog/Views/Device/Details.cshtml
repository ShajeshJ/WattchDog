@model IEnumerable<WattchDog.Models.DataViewModel>

<h2>Details</h2>

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>Real Power</td>
                        <td>Date Recorded</td>
                    </tr>
                </thead>
                <tbody id="tablecontent">
                    @foreach (var datapoint in Model)
                    {
                        <tr>
                            <td>@datapoint.Value</td>
                            <td>@datapoint.Time.ToString("hh:mm:ss tt dd/MMM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var deviceInfo = $.connection.deviceHub;
            // Create a function that the hub can call back to display messages.
            deviceInfo.client.addMeasurements = function (realpower, date) {
                var rowCount = $('#tablecontent tr').length;

                if (rowCount == 10) {
                    $('#tablecontent tr:last').remove();
                }

                // Add the message to the page.
                $('#tablecontent').prepend('<tr><td>' + realpower + '</td><td>' + date + '</td></tr>');
            };
            
            // Start the connection.
            $.connection.hub.start().done(function () {
                deviceInfo.server.connect('@(Request.QueryString["macaddress"])');
            });
        });
    </script>
}