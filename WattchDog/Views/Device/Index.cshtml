@model IEnumerable<WattchDog.Models.DeviceViewModel>

<div class="container">
    <div class="row">
        <h1>Devices</h1>
    </div>

    @if ((string)TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error:</strong> @((string)TempData["error"])
        </div>
    }

    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Mac Address</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var device in Model)
                    {
                        <tr>
                            <td>
                                @if (device.Status)
                                {
                                    <span class="glyphicon glyphicon-ok" style="color:#5cb85c"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove-circle" style="color:#d9534f"></span>
                                }
                                @Html.ActionLink(device.Name ?? "{ Unnamed }", "Details", new { macaddress = device.MacAddress }, null)
                            </td>
                            <td>@device.MacAddress</td>
                            <td>
                                @using (Html.BeginForm("EditName", "Device", FormMethod.Post))
                                {
                                    @Html.Hidden("macaddress", device.MacAddress)
                                    <span>@Html.TextBox("name", null, new { @placeholder = device.Name ?? "{ Unnamed }" })</span>
                                    <span><input class="btn btn-default" type="submit" value="Rename"></span>
                                }
                            </td>
                            <td>
                                @if (device.Status)
                                {
                                    <a class="btn btn-success" style="width:75px" disabled>ON</a>
                                    @Html.ActionLink("OFF", "EditStatus", "Device", new { macaddress = device.MacAddress, status = false }, new { @class = "btn btn-danger", @style = "width:75px" });
                               }
                                else
                                {
                                        @Html.ActionLink("ON", "EditStatus", "Device", new { macaddress = device.MacAddress, status = true }, new { @class = "btn btn-success", @style = "width:75px" });
                                    <a class="btn btn-danger" style="width:75px" disabled>OFF</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
